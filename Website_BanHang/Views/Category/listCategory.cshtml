@model Website_BanHang.Models.CategoryModel
@{
    ViewBag.Title = "listCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model.lstCatgories)
            {
                <div class="col-md-3">

                    <div class="card card-category">
                        <div class="img-wrap" style="background: #ffd7d7">
                            <img src="~/Content/images/category/@item.avatar">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="#">@item.name</a></h4>
                            <ul class="list-menu">
                                <li><a href="">Unisex T shirts</a></li>
                                <li><a href="">Casual shirts</a></li>
                                <li><a href="">Scherf Ice cream</a></li>
                                <li><a href="">Another category</a></li>
                                <li><a href="">Great items name</a></li>
                                <li><a href="">Great items name</a></li>
                            </ul>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }

           
        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>

